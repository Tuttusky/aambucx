              <span class="quick-menu-mb">{{ 'general.breadcrumb.home' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        
        {%- if show_offers -%}
          <li>
            <a href="{{ routes.offers_url }}" class="bls_tooltip">
              <span class="bls_tooltip-content">{{ 'general.mobile_sticky.offers' | t }}</span>
              <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 1L16 16" stroke="#212529" stroke-width="2" />
                <path d="M1 16L16 1" stroke="#212529" stroke-width="2" />
              </svg>
              <span class="quick-menu-mb">{{ 'general.mobile_sticky.offers' | t }}</span>
            </a>
          </li>
        {%- endif -%}

        {%- if show_today_deal -%}
          <li>
            <a href="{{ routes.today_deal_url }}" class="bls_tooltip">
              <span class="bls_tooltip-content">{{ 'general.mobile_sticky.today_deal' | t }}</span>
              <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.5 1V16" stroke="#212529" stroke-width="2" />
                <path d="M1 8.5H16" stroke="#212529" stroke-width="2" />
              </svg>
              <span class="quick-menu-mb">{{ 'general.mobile_sticky.today_deal' | t }}</span>
            </a>
          </li>
        {%- endif -%}

        {%- if show_wishlist -%}
